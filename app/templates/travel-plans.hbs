{{#if model}}
	<div class="card-columns">
		{{#each model as |plan|}}
		<div class="card plans-card">
			<div class="card-header">
				{{#if editPlan}}
					{{input type="text" id="name" value=name}}
					
					<button class="btn btn-success plan-page-btn" onclick={{action "editName" plan name}}>Confirm</button>
				{{else}}
					<h3>{{plan.name}}</h3>
					<button class="btn btn-primary plan-page-btn" onclick={{action "showEdit"}}>Edit Name</button>
				{{/if}}
				
				<button class="btn btn-secondary plan-page-btn" onclick={{action "deletePlan" plan}}>Delete Plan</button>
			</div>
			<div class="card-body">
				{{#each plan.cities as |city|}}
					<h5 class="card-title"> 
						{{city.name}}
					</h5>
					{{#each city.attractions as |attraction|}}
					<p class="card-text">
						{{attraction}}
					</p>
					{{/each}}
				{{/each}}
			</div>
		</div>
		{{/each}}
	</div>

{{else}}
	<div class="no-plan">
		<h3>No travel plans yet. </h3>
		<button class="btn btn-success" onclick={{action "createPlan"}}>Create One Now</button>
	</div>
{{/if}}

{{outlet}}